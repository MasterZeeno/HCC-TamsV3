{
  "name": "vite-tamsv3",
  "version": "0.0.1",
  "description": "Hilmarc's Construction Corporation Time and Attendance Management System (TAMS) Unofficial UX/UI Redesign.",
  "private": true,
  "type": "module",
  "scripts": {
    "predev": "npm run compile:sass",
    "dev": "vite --open",
    "prebuild": "npm run compile:sass",
    "build": "vite build",
    "postbuild": "chmod +x scripts/clean.sh && bash scripts/clean.sh",
    "preview": "vite preview --open",
    "compile:sass": "sass --style=compressed src/scss/base.scss src/styles.min.css --load-path=node_modules"
  },
  "devDependencies": {
    "bootstrap": "^5.3.3",
    "sass": "^1.78.0",
    "vite": "^5.4.1"
  }
}